        <View
            android:id="@+id/tvRepositoryName1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/corner_simmer_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/tvLastUpdate1"
            android:layout_width="150dp"
            android:layout_height="16dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/corner_simmer_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRepositoryName1" />

        <View
            android:id="@+id/tvLanguage1"
            android:layout_width="50dp"
            android:layout_height="16dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/corner_simmer_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLastUpdate1" />

        <View
            android:id="@+id/tvStar1"
            android:layout_width="30dp"
            android:layout_height="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/corner_simmer_background"
            app:drawableStartCompat="@drawable/ic_star_border_17"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRepositoryName1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

